<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--background to compensate the transparency under shadow and glow (for bigger depth values)-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient android:angle="90" android:endColor="#FFBE00" android:startColor="#A69B8D" />        </shape>
    </item>

    <!--top, dark, inner shadow-->
    <item
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient android:angle="90" android:endColor="#FFBE00" android:startColor="#A69B8D" />        </shape>
    </item>

    <!--bottom, light, outer glow-->
    <item
        android:top="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="#4DFFFFFF" />
        </shape>
    </item>

    <!--your color-->
    <item
        android:top="8dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
        </shape>
    </item>
</layer-list>